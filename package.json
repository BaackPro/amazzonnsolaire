
{
  "name": "amazzon-solaire",
  "version": "1.0.0",
  "description": "Site vitrine Amazzonn Solaire",
  "scripts": {
    "dev": "live-server . --port=3000",
    "build": "npm run optimize-assets && npm run generate-sitemap",
    "optimize-assets": "imagemin images/* --out-dir=dist/images && cleancss -o dist/css/style.min.css css/style.css",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "security-check": "npx snyk test && npx npm audit"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "imagemin-cli": "^7.0.0",
    "clean-css-cli": "^5.6.1"
  }
}